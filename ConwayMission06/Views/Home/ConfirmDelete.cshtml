@{
}
@model Movie

<p>@Model.Title</p>
<p>@Model.Category?.CategoryName</p>
<p>@Model.Year</p>
<p>@Model.Director</p>
<p>@Model.Rating</p>
<p>@Model.Edited</p>
<p>@Model.LentTo</p>
<p>@Model.Notes</p>
<label>Are you sure you want to delete this record?:</label>
<form asp-controller="Home" asp-action="Delete" method="post">
    <input type="hidden" asp-for="@Model.MovieId" />
    <button type="submit" class="btn btn-danger">DELETE</button>
</form>
<a class="btn btn-info" asp-controller="Home" asp-action="ShowMovies">Cancel</a>