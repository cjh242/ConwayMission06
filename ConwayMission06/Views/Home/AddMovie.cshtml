@model Movie;

@{
    ViewData["Title"] = "Add Movies";
}

<div class="text-center">
    <h2>Movie Information</h2>
    <div class="container">
        <form method="post">
        
            <input type="hidden" asp-for="MovieId" />
            @* <label asp-for="Category">Category:</label>
            <input asp-for="Category"required> *@
            <div class="mb-3">
                <label asp-for="CategoryId">Category: </label>
                <select asp-for="CategoryId">
                    <option value="">Select a Category</option>
                    @foreach (Category cat in ViewBag.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Title">Title:</label>
                <input asp-for="Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Year">Year:</label>
                <input asp-for="Year">
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Director">Director:</label>
                <input asp-for="Director">
            </div>
            <div class="mb-3">
                <label asp-for="Rating">Rating:</label>
                <select asp-for="Rating">
                    <option value="">Select a rating</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Edited">Edited (Yes/No):</label>
                <input asp-for="Edited" type="radio" value=True>
                <label asp-for="Edited">Yes</label>
                <input asp-for="Edited" type="radio" value=False>
                <label asp-for="Edited">No</label>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CopiedToPlex">CopiedToPlex (Yes/No):</label>
                <input asp-for="CopiedToPlex" type="radio" value=True>
                <label asp-for="CopiedToPlex">Yes</label>
                <input asp-for="CopiedToPlex" type="radio" value=False>
                <label asp-for="CopiedToPlex">No</label>
                <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LentTo">Lent To:</label>
                <input asp-for="LentTo">
            </div>
            <div class="mb-3">
                <label asp-for="Notes">Notes (max 25 characters):</label>
                <input asp-for="Notes" maxlength="25">
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>